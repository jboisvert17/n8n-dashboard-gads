# ============================================
# Configuration Nginx pour Google Ads Dashboard
# ============================================
# Copie ce fichier dans /etc/nginx/sites-available/dashboard.accolades.marketing
# Puis crée un lien symbolique dans sites-enabled

server {
    listen 80;
    server_name dashboard.accolades.marketing;
    
    # Redirection HTTP vers HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name dashboard.accolades.marketing;

    # Certificats SSL (Let's Encrypt)
    # Ajuste les chemins selon ta configuration
    ssl_certificate /etc/letsencrypt/live/accolades.marketing/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/accolades.marketing/privkey.pem;
    
    # Configuration SSL recommandée
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;

    # Proxy vers le conteneur Docker
    location / {
        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Timeout plus long pour les requêtes
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}


